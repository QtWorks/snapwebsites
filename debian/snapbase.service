[Unit]
Description=Snap! Websites basic initialization on each reboot

[Service]
Type=oneshot
ExecStart=/usr/sbin/snapbootinit
User=root
Group=root
RuntimeDirectory=snapwebsites

[Install]
WantedBy=multi-user.target

